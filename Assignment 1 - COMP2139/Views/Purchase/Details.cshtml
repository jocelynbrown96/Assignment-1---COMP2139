@model Assignment_1___COMP2139.Models.Purchase

@{
    ViewData["Title"] = "Purchase Details";
}

<h2>Purchase Details</h2>

<p><strong>Guest Name:</strong> @Model.GuestName</p>
<p><strong>Email:</strong> @Model.GuestEmail</p>
<p><strong>Purchase Date:</strong> @Model.PurchaseDate.ToString("MMMM dd, yyyy HH:mm")</p>

<h3>Tickets Purchased</h3>
<ul>
    @foreach(var pe in Model.PurchaseEvents)
    {
        <li>@pe.Quantity x @pe.Event?.Title (@pe.Event?.Date.ToString("MMMM dd, yyyy")) - $@(pe.Event?.TicketPrice * pe.Quantity)</li>
    }
</ul>

<p><strong>Total Cost:</strong> $@Model.TotalCost</p>

