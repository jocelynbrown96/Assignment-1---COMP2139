@model Assignment_1___COMP2139.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<style>
    body { background: lightgray; font-family: 'Segoe UI', Arial, sans-serif; }
    .delete-container {
        background: white;
        border-radius: 12px;
        padding: 30px;
        max-width: 600px;
        margin: 40px auto;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        text-align: center;
    }
    h2 { color: #d32f2f; font-weight: bold; margin-bottom: 20px; }
    p { color: #222; font-size: 1.1rem; }
    button, a {
        padding: 12px 24px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        border: none;
    }
    .btn-danger { background: #d32f2f; color: white; }
    .btn-danger:hover { background: #b71c1c; }
    .btn-secondary { background: #222; color: white; margin-left: 10px; }
    .btn-secondary:hover { background: #00aeff; }
</style>

<div class="delete-container">
    <h2>Confirm Delete</h2>

    <p>Are you sure you want to delete <strong>@Model.Title</strong>?</p>
    <p>This action cannot be undone.</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn-secondary">Cancel</a>
    </form>
</div>