        margin-left: 10px;
        padding: 15px 30px;
        border-radius: 14px;
        font-size: 1.12rem;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
        background: #222;
        color: #fff !important;
        transition: background .22s;
        border: none;
    }
    .btn-create:hover { background: #ffa500; color: #222 !important; }




</style>

<!-- Banner -->
<div class="banner-container">
    <img src="/HomeBanner.png" alt="Concert crowd" style="width: 100vw; height: 320px; object-fit: cover; display: block;">
    <h1 class="banner-title">Events</h1>
    <form asp-controller="Events" asp-action="Index" method="get" class="banner-search">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" placeholder="Search events..." />
        <button type="submit">Search</button>
    </form>
</div>

<!-- Filter + Add New Event -->
<div class="filter-create-container" style="width:100%;margin:38px auto 32px auto;display:flex;justify-content:center;align-items:center;gap:40px;background:rgba(255,255,255,0.94);border-radius:10px;box-shadow:0 4px 16px rgba(0,0,0,0.08);padding:22px 30px;">
    <form method="get" asp-action="Index" style="display:flex;align-items:center;gap:20px;margin:0;">
        <label for="categoryFilter" style="font-weight:500;color:#444;font-size:1.05rem;">Category:</label>
        <select id="categoryFilter" name="categoryId" class="form-select" style="padding:12px 22px;border-radius:12px;border:1.5px solid #ced4da;font-size:1.07rem;background:#f7f7f7;" onchange="this.form.submit()">
            <option value="">All Categories</option>
            @foreach (var category in categories)
            {
                if (selectedCategory == category.Id)
                {
                    <option value="@category.Id" selected>@category.Name</option>
                }
                else
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </select>
        <label for="priceSort" style="font-weight:500;color:#444;font-size:1.05rem;">Price:</label>
        <select id="priceSort" name="sortOrder" class="form-select" style="padding:12px 22px;border-radius:12px;border:1.5px solid #ced4da;font-size:1.07rem;background:#f7f7f7;min-width:200px;" onchange="this.form.submit()">
            <option value="">Default</option>
            @if (sortOrder == "priceAsc")
            {
                <option value="priceAsc" selected>Lowest to Highest</option>
            }
            else
            {
                <option value="priceAsc">Lowest to Highest</option>
            }
            @if (sortOrder == "priceDesc")
            {
                <option value="priceDesc" selected>Highest to Lowest</option>
            }
            else
            {
                <option value="priceDesc">Highest to Lowest</option>
            }
        </select>
    </form>
    <a asp-action="Create" class="btn-create" style="margin-left:10px;padding:15px 30px;border-radius:14px;font-size:1.12rem;font-weight:600;box-shadow:0 2px 8px rgba(0,0,0,0.07);background:#222;color:#fff;transition:background .22s;">+ Add New Event</a>
</div>


<!-- Events Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Location</th>
            <th>Category</th>
            <th>Price</th>
            <th>Tickets</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id">@ev.Title</a>
                </td>
                <td>@ev.Date.ToString("MMMM dd, yyyy")</td>
                <td>@ev.Location</td>
                <td>@ev.Category?.Name</td>
                <td>$@ev.TicketPrice.ToString("F2")</td>
                <td style="white-space: nowrap;">
                    <span>
                        @ev.AvailableTickets
                        @if (ev.AvailableTickets < 5)
                        {
                            <span style="color:red; font-weight:bold; margin-left:6px;">âš  Low stock!</span>
                        }
                    </span>
                </td>
                <td class="action-buttons">
                    <!-- Buy button -->
                    <form asp-controller="Purchases" asp-action="Create" method="get" style="display:inline;">
                        <input type="hidden" name="eventId" value="@ev.Id" />
                        <button type="submit" class="btn btn-buy">
                            <i class="fas fa-shopping-cart"></i> Buy
                        </button>
                    </form>
                    <!-- Edit button -->
                    <a asp-action="Edit" asp-route-id="@ev.Id" class="btn btn-edit">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <!-- Delete button -->
                    <form asp-action="Delete" asp-route-id="@ev.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this event?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-delete">
                            <i class="fas fa-trash-alt" style="margin-right:4px;"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
