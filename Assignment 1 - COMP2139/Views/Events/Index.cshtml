        background-color: #222;
        color: white !important;
    }
    .btn-create:hover { background-color: #00aeff; }
    /* Events table action buttons */
    .btn {
        padding: 12px 32px;
        font-size: 1.08rem;
        font-weight: bold;
        border-radius: 20px;
        width: 130px;
        min-width: 130px;
        border: none;
        text-align: center;
        display: inline-block;
    }
    .btn-buy    { background: green;    color: #fff; }
    .btn-buy:hover    { background: green; }
    .btn-edit   { background: #ffa500; color: #fff; }
    .btn-edit:hover   { background: #ffb733; }
    .btn-delete { background: #dc3545; color: #fff; }
    .btn-delete:hover { background: #e65a6a; }
    .action-buttons {
        display: flex;
        gap: 12px;
    }
    table.table {
        border: 2px solid #00aeff;
