@model IEnumerable<Assignment_1___COMP2139.Models.Event>
@{
ViewData["Title"] = "Events";
var categories = ViewBag.Categories as List<Assignment_1___COMP2139.Models.Category>;
var selectedCategory = ViewBag.SelectedCategory as int?;
}

<style>
    body {
        background: lightgray;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .navbar.bg-white {
        background-color: black !important;
    }

    .bg-white {
        background-color: #222 !important;
    }

    .navbar .nav-link {
        color: white !important;
        text-align: right;
    }

    .navbar .nav-link.active,
    .navbar .nav-link:hover {
        color: #ffa500 !important;
    }

    .navbar-light .navbar-brand {
        color: #fff !important;
    }

    .navbar, .container, header, .banner-container {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    .banner-container {
        position: relative;
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        margin-bottom: 40px;
    }

    .banner-title {
        position: absolute;
        top: 35%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        font-size: 5rem;
        font-weight: bold;
        text-shadow: 0 2px 14px #1A1A1A;
        margin: 0;
        width: 100%;
        text-align: center;
    }

    .banner-search {
        position: absolute;
        top: 80%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        gap: 12px;
        width: 440px;
        justify-content: center;
    }

    .banner-search input {
        padding: 12px 20px;
        font-size: 1.1rem;
        border-radius: 10px;
        border: 1px solid #aaa;
        width: 320px;
    }

    .banner-search button {
        padding: 12px 24px;
        border-radius: 10px;
        border: none;
        background: #222;
        color: #fff;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
    }

    .banner-search button:hover {
        background: #444;
    }

    table.table {
        width: 90%;
        margin: 0 auto 40px auto;
        border-collapse: collapse;
        background: #d3d3d3;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    }

    table.table thead tr {
        background: #222;
        color: #ffa500;
        font-weight: bold;
    }

    table.table th,
    table.table td {
        padding: 12px 20px;
        text-align: left;
        border-bottom: 1px solid #bbb;
        color: #222;
    }

    table.table tbody tr:hover {
        background: #00aeff;
        color: white;
        cursor: pointer;
    }

    a.btn-primary {
        background-color: #222 !important;
        border: none !important;
        font-weight: bold;
        color: white !important;
        padding: 6px 14px;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    a.btn-primary:hover {
        background-color: #00aeff !important;
    }

    form.filter-form {
        width: 320px;
        margin: 0 auto 20px auto;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    form.filter-form label {
        font-weight: bold;
        margin-bottom: 8px;
        color: #222;
    }

    select.form-select {
        width: 100%;
        padding: 12px 20px;
        border-radius: 10px;
        border: 1px solid #aaa;
        font-size: 1.1rem;
    }

    .action-buttons {
        display: flex;
        gap: 6px;
    }

    .btn-warning, .btn-danger {
        border-radius: 10px;
        font-weight: bold;
        color: white !important;
        padding: 6px 12px;
    }

    .btn-warning {
        background-color: #ffa500;
        border: none;
    }

    .btn-warning:hover {
        background-color: #ffb733;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn-danger:hover {
        background-color: #e65a6a;
    }

    .add-event-container {
        width: 90%;
        margin: 0 auto 20px auto;
        text-align: right;
    }

    .filter-create-container {
        width: 90%;
        margin: 0 auto 20px auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-create {
        background-color: #222;
        color: white !important;
        padding: 12px 20px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .btn-create:hover {
        background-color: #00aeff;
    }

</style>

<!-- Banner  -->
<div class="banner-container">
    <img src="/HomeBanner.png" alt="Concert crowd" style="width: 100vw; height: 320px; object-fit: cover; display: block;">
    <h1 class="banner-title">Events</h1>

    <!-- Search Bar -->
    <form asp-controller="Events" asp-action="Index" method="get" class="banner-search">
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" placeholder="Search events..." />
        <button type="submit">Search</button>
    </form>
</div>

<!-- Filter + Add New Event -->
<div class="filter-create-container">
    <form method="get" asp-action="Index" class="filter-form">
        <label for="categoryFilter">Filter by Category:</label>
        <select id="categoryFilter" name="categoryId" class="form-select" onchange="this.form.submit()">
            <option value="">All Categories</option>
            @foreach (var category in categories)
            {
                <option value="@category.Id" selected="@(selectedCategory == category.Id)">
                    @category.Name
                </option>
            }
        </select>
    </form>

    <a asp-action="Create" class="btn btn-create">+ Add New Event</a>
</div>

<!-- Events Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Location</th>
            <th>Category</th>
            <th>Price</th>
            <th>Tickets</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var ev in Model)
    {
        <tr>
            <td><a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id">@ev.Title</a></td>
            <td>@ev.Date.ToString("MMMM dd, yyyy")</td>
            <td>@ev.Location</td>
            <td>@ev.Category?.Name</td>
            <td>$@ev.TicketPrice</td>
            <td>@ev.AvailableTickets</td>
            <td class="action-buttons">
                <a asp-controller="Purchases" asp-action="Create" asp-route-eventId="@ev.Id" class="btn btn-primary btn-sm">Buy</a>
                <a asp-action="Edit" asp-route-id="@ev.Id" class="btn btn-warning btn-sm">Edit</a>

                <form asp-action="Delete" asp-route-id="@ev.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this event?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>