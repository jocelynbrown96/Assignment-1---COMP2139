    }
    .btn {
        padding: 12px 32px;
        font-size: 1.08rem;
        font-weight: bold;
        border-radius: 20px;
        width: 145px;
        min-width: 130px;
        border: none;
        text-align: center;
        display: inline-block;
        height: 52px;          /* <--- Force all buttons to same height */
        line-height: 28px;     /* Ensures vertical alignment */
        box-sizing: border-box;
        margin: 0;
        vertical-align: middle;
    }
    .btn i {
        margin-right: 8px;
        vertical-align: middle;
    }

    .filter-create-container {
        width: 100%;
        margin: 38px auto 32px auto;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 24px;
        background: rgba(255,255,255,0.94);
        border-radius: 18px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        padding: 22px 30px;
    }
    .form-select {
        padding: 12px 22px;
        border-radius: 12px;
        border: 1.5px solid #ced4da;
        font-size: 1.07rem;
        background: #f7f7f7;
        transition: box-shadow .17s;
    }
    .form-select:focus {
        box-shadow: 0 0 0 2px #ffa5003a;
