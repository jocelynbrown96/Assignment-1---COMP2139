@model Assignment_1___COMP2139.Models.Category

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>
<p class="text-muted">@Model.Description</p>

<h2 class="mt-4">Events in this Category</h2>

@if (Model.Events != null && Model.Events.Any())
{
    <div class="row">
        @foreach (var ev in Model.Events)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="text-decoration-none text-dark">
                                @ev.Title
                            </a>
                        </h5>
                        <p class="card-text">
                            📍 <strong>@ev.Location</strong><br />
                            🗓️ @ev.Date.ToString("MMMM dd, yyyy")<br />
                            💵 $@ev.TicketPrice
                        </p>
                        <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="btn btn-sm btn-outline-primary">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No events in this category yet.</p>
}