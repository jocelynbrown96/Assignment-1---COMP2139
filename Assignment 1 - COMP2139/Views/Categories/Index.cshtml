@model IEnumerable<Assignment_1___COMP2139.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<style>
    body {
        background: lightgray;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    /* Navbar styles - same as home page */
    .navbar.bg-white {
        background-color: black !important;
    }
    .bg-white {
        background-color: #222 !important;
    }
    .navbar .nav-link {
        color: white !important;
        text-align: right;
    }
    .navbar .nav-link.active,
    .navbar .nav-link:hover {
        color: #ffa500 !important;
    }
    .navbar-light .navbar-brand {
        color: #fff !important;
    }
    .navbar, .container, header, .banner-container {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    /* Banner styles */
    .banner-container {
        position: relative;
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        margin-bottom: 40px;
        height: 320px;
        overflow: hidden;
    }
    .banner-container img {
        width: 100vw;
        height: 320px;
        object-fit: cover;
        display: block;
    }
    .banner-title {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        font-size: 5rem;
        font-weight: bold;
        text-shadow: 0 2px 14px #1A1A1A;
        margin: 0;
        width: 100%;
        text-align: center;
    }

    /* Category cards grid */
    .row.categories-row {
        width: 90%;
        margin: 0 auto 40px auto;
        display: flex;
        flex-wrap: wrap;
        gap: 32px;
        justify-content: center;
    }

    /* Category card styled like home-tile */
    .category-card {
        width: 320px;
        height: 180px;
        background: dimgrey;
        border-radius: 24px;
        border: 1.5px solid #00aeff;
        box-shadow: 0 8px 32px rgba(0,0,0,0.08), 0 2px 12px rgba(0,0,0,0.12);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        font-size: 2rem;
        color: #222;
        font-weight: bold;
        padding: 20px;
        transition: box-shadow 0.25s, transform 0.23s, background 0.20s;
        margin: 20px;
    }
    .category-card:hover {
        background: #00aeff;
        color: #fff;
        transform: translateY(-2px) scale(1.03);
        cursor: pointer;
    }

    /* Card title and description styling */
    .category-card h5 {
        margin-bottom: 0.5rem;
        color: inherit;
        font-weight: bold;
        font-size: 2.25rem;
    }
    .category-card p {
        color: inherit;
        font-weight: normal;
        font-size: 1rem;
        margin-bottom: 1rem;
    }

    /* View Events button styled similar to home tiles */
    a.btn-primary {
        background-color: #222 !important;
        border: none !important;
        font-weight: bold;
        color: white !important;
        padding: 10px 20px;
        border-radius: 10px;
        transition: background-color 0.3s ease;
        font-size: 1rem;
        text-decoration: none;
        margin-top: auto;
    }
    a.btn-primary:hover {
        background-color: #00aeff !important;
        color: white !important;
        text-decoration: none;
    }
    }
</style>


<!-- Banner -->
<div class="banner-container">
    <img src="/HomeBanner.png" alt="Concert crowd" />
    <h1 class="banner-title">Categories</h1>
</div>

<!-- Category Cards -->
<div class="row categories-row">
    @foreach (var category in Model)
    {
        <div class="category-card">
            <h5>@category.Name</h5>
            <p>@category.Description</p>
            <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id" class="btn btn-primary">
                View Events
            </a>
        </div>
    }
</div>
