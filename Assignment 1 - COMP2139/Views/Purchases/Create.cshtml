@model Assignment_1___COMP2139.Models.PurchaseViewModel

@{
    ViewData["Title"] = "Purchase Tickets";
}

<h2>Purchase Tickets</h2>
<hr />

<form asp-controller="Purchases" asp-action="Create" method="post">
    <input type="hidden" asp-for="EventId" />

    <div class="form-group">
        <label>Event:</label>
        <p><strong>@Model.EventTitle</strong></p>
    </div>

    <div class="form-group">
        <label>Date:</label>
        <p>@Model.EventDate.ToString("MMMM dd, yyyy")</p>
    </div>

    <div class="form-group">
        <label>Ticket Price:</label>
        <p>$@Model.TicketPrice</p>
    </div>

    <div class="form-group">
        <label>Available Tickets:</label>
        <p>@Model.AvailableTickets</p>
    </div>

    <div class="form-group">
        <label asp-for="GuestName"></label>
        <input asp-for="GuestName" class="form-control" />
        <span asp-validation-for="GuestName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GuestEmail"></label>
        <input asp-for="GuestEmail" class="form-control" />
        <span asp-validation-for="GuestEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" type="number" min="1" max="@Model.AvailableTickets" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-dark mt-3">Complete Purchase</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}