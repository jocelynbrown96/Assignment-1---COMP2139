@model Assignment_1___COMP2139.Models.Purchase

@{
    ViewData["Title"] = "Purchase Details";
}

<style>
    .details-container {
        width: 90%;
        margin: 20px auto;
        background: #d3d3d3;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    }

    h2 {
        color: #222;
        margin-bottom: 20px;
        text-align: center;
    }

    .purchase-info p {
        font-weight: bold;
        margin: 6px 0;
        color: #222;
    }

    table.table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    table.table th,
    table.table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #bbb;
        color: #222;
    }

    table.table thead tr {
        background: #222;
        color: #ffa500;
        font-weight: bold;
    }

    table.table tbody tr:hover {
        background: #00aeff;
        color: white;
    }

    a.btn-primary {
        background-color: #222;
        border: none;
        font-weight: bold;
        color: white;
        padding: 6px 14px;
        border-radius: 10px;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

    a.btn-primary:hover {
        background-color: #00aeff;
    }
</style>

<div class="details-container">
    <h2>Purchase Details</h2>

    <div class="purchase-info">
        <p><strong>Guest Name:</strong> @Model.GuestName</p>
        <p><strong>Email:</strong> @Model.GuestEmail</p>
        <p><strong>Purchase Date:</strong> @Model.PurchaseDate.ToString("MMMM dd, yyyy HH:mm")</p>
        <p><strong>Total Cost:</strong> $@Model.TotalCost</p>
    </div>

    <h3>Tickets:</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Event</th>
                <th>Date</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pe in Model.PurchaseEvents)
            {
                <tr>
                    <td>@pe.Event.Title</td>
                    <td>@pe.Event.Date.ToString("MMMM dd, yyyy")</td>
                    <td>@pe.Quantity</td>
                    <td>$@(pe.Quantity * pe.Event.TicketPrice)</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Purchases" asp-action="Index" class="btn btn-primary">Back to Purchases</a>
</div>