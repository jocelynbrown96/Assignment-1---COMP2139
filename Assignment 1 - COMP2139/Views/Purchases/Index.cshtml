@model IEnumerable<Assignment_1___COMP2139.Models.Purchase>

@{
    ViewData["Title"] = "All Purchases";
}

<style>

    .navbar.bg-white { /*Black Nav Bar*/
        background-color: black !important;
    }

    /* If navbar uses .bg-white alone */
    .bg-white {
        background-color: #222 !important;
    }

    /* Navbar link styling */
    .navbar .nav-link {
        color: white !important;
        text-align: right;
    }

    /* Highlights active/hovered navbar links */
    .navbar .nav-link.active,
    .navbar .nav-link:hover {
        color: #ffa500 !important;
    }
    /* Body base styles */
    body {
        background-color: lightgrey;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    /* Ensures navbar brand (site title) is white */
    .navbar-light .navbar-brand {
        color: #fff !important;
    }

    /* Remove all bottom margin from navbar and containers to close gaps */
    .navbar, .container, header, .banner-container {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }
    /* Banner container covers full width */
    .banner-container {
        position: relative;
        width: 100vw;
        left: 50%;
        margin-left: -50vw;
    }
    /* Banner background image */
    .banner-container img {
        width: 100vw;
        height: 200px;
        object-fit: cover;
        display: block;
    }
    /* Main title styling */
    .banner-title {
        position: absolute;
        text-align: center;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: #fff;
        font-size: 6rem;
        font-weight: bold;
        text-shadow: 0 2px 14px #1A1A1A;
        margin: 0;
        width: 100%;
        text-align: center;
        z-index: 2;
    }
    table.table {
        width: 100%;
        margin: 20px auto 40px auto;
        border-collapse: collapse;
        background: #d3d3d3;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    }

    table.table thead tr {
        background: #222;
        color: #ffa500;
        font-weight: bold;
    }

    table.table th,
    table.table td {
        padding: 12px 20px;
        text-align: left;
        border-bottom: 1px solid #bbb;
        color: #222;
    }

    table.table tbody tr:hover {
        background: #00aeff;
        color: white;
    }

    .btn-primary {
        background-color: #222;
        border: none;
        font-weight: bold;
        color: white;
        padding: 6px 14px;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #00aeff;
        color: white;
    }

    h2 {
        text-align: center;
        margin-top: 20px;
        color: #222;
    }
</style>
<div class="banner-container">
<img src="/HomeBanner.png" alt="Concert crowd">

<!-- Banner title -->
<h1 class="banner-title">Purchases</h1>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Guest Name</th>
        <th>Email</th>
        <th>Purchase Date</th>
        <th>Total Cost</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var purchase in Model)
    {
        <tr>
            <td>@purchase.GuestName</td>
            <td>@purchase.GuestEmail</td>
            <td>@purchase.PurchaseDate.ToString("MMMM dd, yyyy HH:mm")</td>
            <td>$@purchase.TotalCost.ToString("F2")</td>
            <td>
                <a asp-controller="Purchases" asp-action="Details" asp-route-id="@purchase.Id" class="btn btn-primary btn-sm">
                    View
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>